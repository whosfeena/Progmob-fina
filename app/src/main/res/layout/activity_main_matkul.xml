<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudMatKul.MainMatkulActivity">

    <TextView
        android:id="@+id/txtUpdateMatkul"
        android:layout_width="373dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:text="**untuk update data dapat dilakukan dengan meng-klik data dosen secara langsung"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelMatkul" />

    <Button
        android:id="@+id/btnGetMatkul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LIHAT DATA MATAKULIAH"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMatkul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddMatkul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TAMBAH DATA MATAKULIAH"
        app:layout_constraintBottom_toTopOf="@+id/btnDelMatkul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDelMatkul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="290dp"
        android:text="HAPUS DATA MATAKULIAH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>